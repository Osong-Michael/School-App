<div class="row sign-up-form">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name: <%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
      </div>
      <div class="card-action">
        <h5 class="white-text">Current Enrollments</h5>
      </div>
    </div>
    <% if current_user == @student %>
      <%= link_to '<i class="material-icons right">create</i> Edit your profile'.html_safe, edit_student_path(@student), class: 'waves-effect waves-light btn-small' %>
    <% end %>
  </div>
</div>